extends ../../layouts/default.pug 
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)

    .container.my-3
        .row 
            .col-12 
                +box-head("Dat hang")

        .row 
            .col-12 
                table(class="table table-bordered")
                    thead 
                        tr 
                            th STT
                            th Anh
                            th Ten
                            th Gia
                            th Tong tien
                    tbody
                        if cartDetail.products.length > 0
                            each item, index in cartDetail.products
                                tr
                                    td #{index + 1}
                                    img(
                                        src=item.productInfor.thumbnail
                                        alt=item.productInfor.title
                                        width="80px"
                                )
                                td #{item.productInfor.title}
                                td #{item.productInfor.priceNew}
                                td #{item.quantity}
                                td #{item.totalPrice}$

                        else 
                            tr 
                                td(
                                    colspan="7"
                                    class="text-center"
                                ) Gio hang trong.

                if(cartDetail.products.length > 0)
                    h3(class="text-right") Tong don hang: #{cartDetail.totalPrice}$ 


        if(cartDetail.products.length > 0)
            .row 
                .col-12 
                    .card.p-4.my-4 
                        form(
                            action="/checkout/order"
                            method="POST"
                        )
                            div(class="form-group")
                                lable(for="fullName") Ho ten 
                                input(
                                    type="text"
                                    class="form-control"
                                    id="fullName"
                                    name="fullName"
                                    required
                                )
                            div(class="form-group")
                                lable(for="phone") Sdt 
                                input(
                                    type="text"
                                    class="form-control"
                                    id="phone"
                                    name="phone"
                                    reqired
                                )
                            div(class="form-group")
                                lable(for="address") Dia chi 
                                input(
                                    type="text"
                                    class="form-control"
                                    id="address"
                                    name="address"
                                    required
                                )
                            div(class="form-group")
                                button(
                                    type="submit"
                                    class="btn btn-success bth-block"
                                ) Dat hang

        else
            h1 Không có sản phẩm nào trong giỏ hàng